
<div class="container">
  <h2><em>Chosen Restaurant:</em></h2>

  <div class="card p-3" style="width: 20rem;">
    <h3><strong> <%= @restaurant.name %> </strong></h3>
    <div class="card-body">
      <p>Category: <%= @restaurant.category %> </p>
      <p> Address: <%= @restaurant.address %>, Tel: <%= @restaurant.phone_number %> </p>
      <%= link_to "Add Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
    </div>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item">
          <%= review.content %><br>
          Rating: <%= review.rating %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-success" %>
</div>
